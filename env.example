# ── Device ──
# Options: cpu, cuda, mps (Apple Silicon)
DEVICE=cpu

# ── Audio (capture) ──
CAPTURE_SAMPLE_RATE=16000
CAPTURE_CHUNK_MS=100

# ── ASR (Qwen3-ASR) ──
# Qwen/Qwen3-ASR-0.6B (faster) or Qwen/Qwen3-ASR-1.7B (better quality)
ASR_MODEL=Qwen/Qwen3-ASR-0.6B
ASR_MAX_NEW_TOKENS=256
ASR_MAX_BATCH_SIZE=32
WINDOW_SEC=8.0
ASR_INTERVAL_MS=500

# ── Commit algorithm ──
COMMIT_STABILITY_K=3
COMMIT_TIMEOUT_SEC=2.0
COMMIT_MIN_WORDS=1

# ── Machine translation ──
MT_MODEL_ES_EN=Helsinki-NLP/opus-mt-es-en
MT_MODEL_EN_ES=Helsinki-NLP/opus-mt-en-es

# ── TTS ──
TTS_ENGINE=edge-tts
TTS_QWEN3_MODEL=Qwen/Qwen3-TTS-0.6B
TTS_SAMPLE_RATE=24000

# ── Backpressure ──
TTS_QUEUE_MAX=5

# ── Server ──
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ── Model cache ──
MODEL_CACHE_DIR=./models
